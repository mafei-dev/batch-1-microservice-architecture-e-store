<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.orderservice.mapper.OrderStatusMapper">

    <insert id="save" parameterType="com.example.orderservice.entity.OrderStatusEntity">
        INSERT INTO `batch-1-order-service-db`.order_status (order_status_id, update_date, status, order_id)
        VALUES (#{orderStatusEntity.orderStatusId},
                #{orderStatusEntity.updateDate},
                #{orderStatusEntity.status},
                #{orderStatusEntity.orderId})
    </insert>
    <select id="getStatus" resultType="com.example.orderservice.entity.OrderStatusEntity">
        SELECT *
        FROM `batch-1-order-service-db`.order_status
        WHERE order_id = #{orderId}
    </select>
</mapper>